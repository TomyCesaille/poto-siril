{
  "name": "poto-siril",
  "version": "0.1.0",
  "description": "Automatization around Siril (<https://siril.org/>) and ASIAIR for deep sky astrophotography.",
  "main": "poto.sh",
  "type": "module",
  "scripts": {
    "build": "swc src --out-dir dist/src",
    "build:ci": "tsc && npm run build",
    "lint": "eslint .",
    "check-types": "tsc",
    "test": "TZ=UTC npx jest --coverage src",
    "dev-spawn-ds1": "node --import tsx ./scripts/dev-spawn-ds1.ts",
    "dev-spawn-ds1-old": "node --loader ts-node/esm ./scripts/dev-spawn-ds1.ts",
    "dev-dispatch-ds1": "npm run dev-spawn-ds1 && TZ=UTC ./poto.sh dispatch -a ./tmp/asiair-dump -b ./tmp/bank -p ./tmp/project -m autorun"
  },
  "keywords": [
    "siril",
    "asiair",
    "zwo",
    "astrophotography",
    "astro",
    "deepsky"
  ],
  "author": "JorisLacance.fr",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.17.0",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "swc": "^1.0.11",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.18.1"
  },
  "dependencies": {
    "ansi-escapes": "^7.0.0",
    "chalk": "^5.4.1",
    "commander": "^12.1.0",
    "enquirer": "^2.4.1",
    "execa": "^9.5.2"
  }
}
